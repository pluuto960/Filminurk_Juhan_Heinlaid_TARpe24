 @model IEnumerable<Filminurk.Models.Movies.MoviesIndexViewModel>

@{
	int rowNumber = 1;
}

<div>
	<a asp-action="Create" asp-controller="Movies" type="submit" class="btn-primary"></a>
</div>
<div class="h1">
	Filmid
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Filmi Pealkiri</th>
				<th scope="col">Filmi Väljalaskeaeg</th>
				<th scope="col">Filmi Hinnang</th>
				<th scope="col">Filmi Žanr</th>
				<th scope="col">Inspiratsioon</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@movie.Title</td>
					<td>@movie.FirstPublished</td>
					<td>@movie.CurrentRating</td>
					<td>@movie.MovieGenre</td>
					<td>@movie.MovieInspiration</td>
					<td></td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>
